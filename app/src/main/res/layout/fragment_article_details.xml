<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/articleDetailsImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/_504369_premier_ministre_canada_justin_trudeau" />

    <TextView
        android:id="@+id/articleDetailsChannelName"
        style="@style/ArticleCardChannelName"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/articleDetailsImage"
        tools:text="Politique canadienne" />

    <TextView
        android:id="@+id/articleDetailsTitle"
        style="@style/ArticleCardTitle"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/articleDetailsChannelName"
        tools:text="Trudeau promet des «centaines de millions» pour le tramway de Québec" />


    <TextView
        android:id="@+id/articleDetailsLead"
        style="@style/ArticleDetailsLead"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/articleDetailsTitle"
        tools:text="Trudeau promet des «centaines de millions» pour le tramway de Québec" />

    <TextView
        android:id="@+id/articleDetailsPublicationDate"
        style="@style/ArticleCardPublicationDate"
        app:drawableStartCompat="@drawable/ic_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/articleDetailsLead"
        tools:text="14 Avril 2024" />

</androidx.constraintlayout.widget.ConstraintLayout>